@model List<Coche>

@{
    ViewData["Title"] = "Lista de Coches";
}

<h1>Lista de Coches</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Imagen</th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coche in Model)
        {
            <tr>
                <td>@coche.IdCoche</td>
                <td>@coche.Marca</td>
                <td>@coche.Modelo</td>
                <td>
                    <img src="@coche.Imagen" alt="Imagen de @coche.Modelo" width="100" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@coche.IdCoche" class="btn btn-primary">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
